














<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, clase: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, clase: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, clase: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, clase: 'form-control' %>

      <%= f.submit "Create my Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>